{
    "name": "cartalyst/platform",
    "description": "Platform",
    "keywords": [
        "cartalyst",
        "laravel",
        "platform",
        "bootstrap"
    ],
    "license": "proprietary",
    "authors": [
        {
            "name": "Cartalyst LLC",
            "email": "help@cartalyst.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.cartalyst.com"
        }
    ],
    "require": {
        "php": ">=5.6.4",
        "laravel/framework": "5.3.*",

        "platform/admin-default": "dev-feature/six",
        "platform/frontend-default": "dev-feature/six",

        "platform/foundation": "dev-feature/six",
        "platform/installer": "dev-feature/six",

        "platform/access": "dev-feature/six",
        "platform/attributes": "dev-feature/six",
        "platform/content": "dev-feature/six",
        "platform/dashboard": "dev-feature/six",
        "platform/media": "dev-feature/six",
        "platform/menus": "dev-feature/six",
        "platform/operations": "dev-feature/six",
        "platform/pages": "dev-feature/six",
        "platform/roles": "dev-feature/six",
        "platform/settings": "dev-feature/six",
        "platform/themes": "dev-feature/six",
        "platform/users": "dev-feature/six"
    },
    "require-dev": {
        "doctrine/dbal": "~2.4",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "files": [
            "app/functions.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Cartalyst\\Platform\\": "app/overrides/src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan platform:check-env-file",
            "php artisan optimize",
            "php artisan theme:publish --extensions",
            "php artisan vendor:publish --tag='platform:installer.assets'"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan platform:check-env-file",
            "php artisan optimize",
            "php artisan theme:publish --extensions",
            "php artisan vendor:publish --tag='platform:installer.assets'"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "component": "application"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
