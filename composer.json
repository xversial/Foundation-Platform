{
    "name": "cartalyst/platform",
    "description": "Platform",
    "keywords": [
        "cartalyst",
        "laravel",
        "platform",
        "bootstrap"
    ],
    "license": "proprietary",
    "authors": [
        {
            "name": "Cartalyst LLC",
            "email": "help@cartalyst.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.cartalyst.com"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",

        "platform/admin-default": "3.0.*",
        "platform/frontend-default": "2.0.*",

        "platform/foundation": "4.0.*",
        "platform/installer": "4.0.*",

        "platform/access": "4.0.*",
        "platform/attributes": "4.0.*",
        "platform/content": "4.0.*",
        "platform/dashboard": "4.0.*",
        "platform/media": "4.0.*",
        "platform/menus": "4.0.*",
        "platform/operations": "4.0.*",
        "platform/pages": "4.0.*",
        "platform/settings": "4.0.*",
        "platform/themes": "4.0.*"
    },
    "require-dev": {
        "doctrine/dbal": "~2.4",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "files": [
            "app/functions.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Cartalyst\\Platform\\": "app/overrides/src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan platform:check-env-file",
            "php artisan optimize",
            "php artisan platform:upgrade",
            "php artisan theme:publish --extensions",
            "php artisan vendor:publish --provider='Platform\\Installer\\Laravel\\InstallerServiceProvider' --tag='assets'",
            "php artisan theme:compile"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan platform:check-env-file",
            "php artisan optimize",
            "php artisan platform:upgrade",
            "php artisan theme:publish --extensions",
            "php artisan vendor:publish --provider='Platform\\Installer\\Laravel\\InstallerServiceProvider' --tag='assets'",
            "php artisan theme:compile"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "component": "application"
    },
    "minimum-stability": "stable"
}
