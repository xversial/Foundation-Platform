{
    "name": "cartalyst/platform",
    "description": "Platform",
    "keywords": [
        "cartalyst",
        "laravel",
        "platform",
        "bootstrap"
    ],
    "license": "proprietary",
    "authors": [
        {
            "name": "Cartalyst LLC",
            "email": "help@cartalyst.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.cartalyst.com"
        }
    ],
    "require": {
        "php": ">=5.6.4",
        "laravel/framework": "5.3.*",

        "platform/admin-default": "dev-feature/six",
        "platform/frontend-default": "2.0.*",

        "platform/foundation": "dev-feature/six as 3.0.99",
        "platform/installer": "~3.0",

        "platform/access": "~3.0",
        "platform/attributes": "~3.0",
        "platform/content": "~3.0",
        "platform/dashboard": "~3.0",
        "platform/media": "dev-feature/six",
        "platform/menus": "~3.0",
        "platform/operations": "~3.0",
        "platform/pages": "~3.0",
        "platform/settings": "~3.0",
        "platform/themes": "~3.0",

        "cartalyst/data-grid": "dev-feature/4.0 as 3.0.9999",
        "cartalyst/data-grid-laravel": "dev-master as 1.0.9999",
        "cartalyst/data-grid-export": "dev-master as 1.0.9999",
        "cartalyst/collections": "dev-master as 1.2.99"
    },
    "require-dev": {
        "doctrine/dbal": "~2.4",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "files": [
            "app/functions.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Cartalyst\\Platform\\": "app/overrides/src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan platform:check-env-file",
            "php artisan optimize",
            "php artisan platform:upgrade",
            "php artisan theme:publish --extensions",
            "php artisan vendor:publish --provider='Platform\\Installer\\Laravel\\InstallerServiceProvider' --tag='assets'",
            "php artisan theme:compile"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan platform:check-env-file",
            "php artisan optimize",
            "php artisan platform:upgrade",
            "php artisan theme:publish --extensions",
            "php artisan vendor:publish --provider='Platform\\Installer\\Laravel\\InstallerServiceProvider' --tag='assets'",
            "php artisan theme:compile"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "component": "application"
    },
    "minimum-stability": "stable"
}
