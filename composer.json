{
    "name": "cartalyst/platform",
    "description": "Platform",
    "keywords": [
        "cartalyst",
        "laravel",
        "platform",
        "bootstrap"
    ],
    "license": "proprietary",
    "authors": [
        {
            "name": "Cartalyst LLC",
            "email": "help@cartalyst.com"
        }
    ],
    "repositories": [
        { "type": "composer", "url": "https://packages.cartalyst.com" }
    ],
    "require": {
        "php": ">=7.0.0",
        "fideloper/proxy": "~3.3",
        "laravel/framework": "5.5.*",

        "platform/admin-default": "~6.0",
        "platform/frontend-default": "~5.0",

        "platform/foundation": "~7.0",
        "platform/installer": "~7.0",

        "platform/access": "~7.0",
        "platform/attributes": "~7.0",
        "platform/content": "~7.0",
        "platform/dashboard": "~7.0",
        "platform/media": "~7.0",
        "platform/menus": "~7.0",
        "platform/operations": "~7.0",
        "platform/pages": "~7.0",
        "platform/roles": "~7.0",
        "platform/settings": "~7.0",
        "platform/themes": "~7.0",
        "platform/users": "~7.0",

        "laravel/tinker": "~1.0"
    },
    "require-dev": {
        "doctrine/dbal": "~2.4",
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "files": [
            "app/functions.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Cartalyst\\Platform\\": "app/overrides/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "component": "application",
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan platform:check-env-file",
            "php artisan optimize",
            "php artisan theme:publish --extensions",
            "php artisan vendor:publish --tag='platform:installer.assets'",
            "php artisan platform:check-updates"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan platform:check-env-file",
            "php artisan optimize",
            "php artisan theme:publish --extensions",
            "php artisan vendor:publish --tag='platform:installer.assets'",
            "php artisan platform:check-updates"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
